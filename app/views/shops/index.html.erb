<div class="input-group">
  <input type="text" id="txt-search" class="form-control input-group-prepend" placeholder="キーワードを入力"></input>
  
  <span class="input-group-btn input-group-append">
    <submit type="submit" id="btn-search" class="btn btn-primary"><i class="fas fa-search"></i> 検索</submit>
  </span>
</div>

<div class="shop-index">
  <div class="wrapper">
  <p><%= @shops.length %>件ヒットしました。</p>

    <div class="shop-list">
      <% @shops.each do |shop| %>
        <div class="shop">
          <div class="shop-title">
            <div class="shop-name"><%= shop.name %></div>
            <div class="shop-area"><%= shop.area %></div>
            <div class="shop-genre"><%= shop.genre %></div>
          </div>
          <div class="shop-info">
            <div class="shop-access"><%= shop.access %></div>
          </div>
        </div>
      <% end %>
    </div>


  </div>
</div>



